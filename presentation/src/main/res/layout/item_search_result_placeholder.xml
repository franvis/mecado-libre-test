<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_placeholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_base_alpha="1.0"
    app:shimmer_highlight_alpha="0.5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_2"
        android:layout_marginBottom="@dimen/gap_2"
        android:orientation="vertical">

        <View
            android:id="@+id/view_search_result_image"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/gap_4"
            android:layout_marginEnd="@dimen/gap_2"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_search_result_title"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/view_search_result_title"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/gap_2"
            android:layout_marginEnd="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_vertical_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_search_result_attributes_1"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_3"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="@id/view_search_result_title"
            app:layout_constraintStart_toStartOf="@id/view_search_result_title"
            app:layout_constraintTop_toBottomOf="@id/view_search_result_title" />

        <View
            android:id="@+id/view_search_result_attributes_2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_2"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="@id/view_search_result_title"
            app:layout_constraintStart_toStartOf="@id/view_search_result_title"
            app:layout_constraintTop_toBottomOf="@id/view_search_result_attributes_1" />

        <View
            android:id="@+id/view_search_result_attributes_3"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_2"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="@id/view_search_result_title"
            app:layout_constraintStart_toStartOf="@id/view_search_result_title"
            app:layout_constraintTop_toBottomOf="@id/view_search_result_attributes_2" />

        <View
            android:id="@+id/view_search_result_price"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/gap_3"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="@id/view_search_result_title"
            app:layout_constraintStart_toStartOf="@id/view_search_result_title"
            app:layout_constraintTop_toBottomOf="@id/view_search_result_attributes_3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/view_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
