<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_base_alpha="1.0"
    app:shimmer_highlight_alpha="0.5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_4"
        android:layout_marginTop="@dimen/gap_4"
        android:layout_marginEnd="@dimen/gap_4">

        <View
            android:id="@+id/view_product_title_placeholder"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_product_title_placeholder_2"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/gap_1"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_title_placeholder"
            app:layout_constraintWidth_percent="0.6" />

        <View
            android:id="@+id/view_product_view_pager_placeholder"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_title_placeholder_2"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/view_product_price_placeholder"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_view_pager_placeholder"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.25" />

        <View
            android:id="@+id/view_product_availability_placeholder"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_price_placeholder"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/view_product_warranty_placeholder"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_availability_placeholder"
            app:layout_constraintWidth_percent="0.4" />

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/gap_4"
            android:background="@drawable/bg_placeholder_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_warranty_placeholder"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
