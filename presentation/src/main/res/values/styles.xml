<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/strongYellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowBackground">@drawable/bg_window</item>
        <item name="editTextStyle">@style/MLEditText</item>
    </style>

    <!--  Custom mercado libre styles  -->

    <style name="MLEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/strongYellow</item>
        <item name="colorControlHighlight">@color/yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/strongGrey</item>
        <item name="android:textColorHint">@color/softGrey</item>
    </style>

</resources>
