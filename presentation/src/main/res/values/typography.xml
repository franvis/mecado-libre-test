<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H3" parent="H2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="H3.Link" parent="H3">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Body">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Body.Link" parent="Body">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Body.Emphasis" parent="Body">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.Secondary" parent="Body">
        <item name="android:textColor">@color/softGrey</item>
    </style>
</resources>
